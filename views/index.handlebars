<div class="container text-center">
    <h1 class="mt-5">Welcome to your USA coin collector!</h1>
    
    <div class="coin-images">
      <img src="src/assets/images/coin1.png" alt="Penny">
      <img src="src/assets/images/coin2.png" alt="Buffalo Nickel">
      <img src="src/assets/images/coin3.png" alt="Dime">
      <img src="src/assets/images/coin3.png" alt="Dime">
      <img src="src/assets/images/coin4.png" alt="Quarter">
    </div>
    
<div class="login-form mt-5">
        <form method="post" action="/login" id="login-form">
            <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="Username" id="username"required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" id="password"required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <form method="get" action="/register">
            <button type="submit" class="btn btn-secondary">Register</button>
        </form>
    </div>
    <script src="/login.js"></script>